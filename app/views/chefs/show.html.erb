<%= render 'shared/page_title', title: " #{@chef.chefname}シェフのプロフィール" %>
<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <%= gravatar_for @chef, size: 150 %>
  </div>
</div>
<% if @chef.recipes.count != 0 %>
  <h4 align="center"><%= @chef.chefname %>シェフのレシピ</h4>
  <div align="center">
    <%= will_paginate @chef_recipes %>
  </div>
  <%= render 'recipes/recipe', obj: @chef_recipes %>
  <div align="center">
    <%= will_paginate @chef_recipes %>
  </div>
<% else %>
  <h4 align="center">レシピがありません</h4>
<% end %>